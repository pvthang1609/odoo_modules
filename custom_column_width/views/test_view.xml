<?xml version="1.0" encoding="UTF-8" ?>
<odoo>
    <record id="view_test_tree" model="ir.ui.view">
            <field name="name">res.users.tree</field>
            <field name="model">res.users</field>
            <field name="arch" type="xml">
                <tree>
                     <field name="name" string="Tên" sticky="1"/>
                     <field name="company_name" string="Tên công ty" sticky="1"/>
                     <field name="email" string="Email" />
                     <field name="lang" string="Ngôn ngữ" />
                </tree>
            </field>
        </record>

    <record model="ir.actions.act_window" id="test_actions">
        <field name="name">View - Test</field>
        <field name="res_model">res.users</field>
        <field name="view_mode">tree</field>
        <field name="view_id" ref="view_test_tree"/>
    </record>
</odoo>
<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="view_sale_order_reason" model="ir.ui.view">
        <field name="name">view.sale.order.reason</field>
        <field name="model">sale.order.reason.wizard</field>
        <field name="arch" type="xml">
            <form string="Lý do từ chối">
                <group>
                    <group>
                        <field name="content"/>
                    </group>
                    <group/>
                </group>
                <footer>
                    <button string="Xác nhận" name="update" type="object" default_focus="1" class="btn-primary"/>
                    <button string="Hủy" class="btn-default" special="cancel"/>
                </footer>
            </form>
        </field>
    </record>

    <record id="action_sale_order_reason" model="ir.actions.act_window">
        <field name="name">Lý do từ chối</field>
        <field name="res_model">sale.order.reason.wizard</field>
        <field name="view_mode">form</field>
        <field name="target">new</field>
        <field name="view_id" ref="view_sale_order_reason"/>
    </record>

</odoo>
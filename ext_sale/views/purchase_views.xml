<?xml version="1.0" encoding="UTF-8" ?>
<odoo>
    <record id="ext_action_quotations_with_onboarding" model="ir.actions.act_window">
        <field name="name">Yêu cầu hỏi hàng</field>
        <field name="type">ir.actions.act_window</field>
        <field name="res_model">sale.order</field>
        <field name="view_id" ref="sale.view_quotation_tree_with_onboarding"/>
        <field name="view_mode">tree,kanban,form,calendar,pivot,graph,activity</field>
        <field name="search_view_id" ref="sale.sale_order_view_search_inherit_quotation"/>
        <field name="context">{'search_default_my_quotation': 1}</field>
        <field name="help" type="html">
          <p class="o_view_nocontent_smiling_face">
            Create a new quotation, the first step of a new sale!
          </p><p>
            Once the quotation is confirmed by the customer, it becomes a sales order.<br/> You will be able to create an invoice and collect the payment.
          </p>
        </field>
    </record>

    <record id="ext_purchase_order_form" model="ir.ui.view">
        <field name="name">purchase.order.form.ext</field>
        <field name="model">purchase.order</field>
        <field name="inherit_id" ref="purchase.purchase_order_form"/>
        <field name="arch" type="xml">
            <xpath expr="//field[@name='order_line']/tree/field[@name='product_id']" position="before">
                <field name="common_name" string="Tên"/>
            </xpath>
            <xpath expr="//field[@name='order_line']/tree/field[@name='product_id']" position="attributes">
                <attribute name="string">Model</attribute>
            </xpath>
            <xpath expr="//field[@name='order_line']/tree/field[@name='name']" position="after">
                <field name="product_origin" />
                <field name="manufacturer" />
                <field name="delivery_term" />
                <field name="payment_term" />
                <field name="delivery_time_customer" />
                <field name="product_warranty" />
            </xpath>
            <xpath expr="//field[@name='order_line']/tree/field[@name='name']" position="attributes">
                 <attribute name="string">Mô tả</attribute>
            </xpath>
            <xpath expr="//field[@name='order_line']/tree/control/create[@name='add_section_control']" position="attributes">
                <attribute name="invisible">1</attribute>
            </xpath>
            <xpath expr="//field[@name='fiscal_position_id']" position="attributes">
                <attribute name="invisible">1</attribute>
            </xpath>
            <xpath expr="//field[@name='date_order']" position="attributes">
                <attribute name="string">Hạn lên đơn hàng</attribute>
            </xpath>
            <xpath expr="//field[@name='date_planned']" position="attributes">
                <attribute name="string">Ngày nhận dự kiến</attribute>
            </xpath>
            <xpath expr="//field[@name='taxes_id']" position="attributes">
                <attribute name="invisible">1</attribute>
            </xpath>
        </field>
    </record>
</odoo>
<?xml version="1.0" encoding="UTF-8" ?>
<odoo>
    <record id="askinfo_product_action" model="ir.actions.act_window">
        <field name="name">Sản phẩm hỏi hàng</field>
        <field name="type">ir.actions.act_window</field>
        <field name="res_model">askinfo.product</field>
        <field name="view_mode">tree,form</field>
    </record>

    <record id="askinfo_product_view" model="ir.ui.view">
        <field name="name">Danh sách sản phẩm hỏi hàng</field>
        <field name="model">askinfo.product</field>
        <field name="type">tree</field>
        <field name="arch" type="xml">
            <tree string="Danh sách sản phẩm hỏi hàng" multi_edit="1">
                <field name="customer_id" />
                <field name="common_name" />
                <field name="product_id" />
                <field name="quantily" />
                <field name="product_origin" />
                <field name="manufacturer" />
                <field name="description" />
                <field name="price" />
                <field name="purchase_price" />
                <field name="local_price" />
                <field name="price_target" />
                <field name="purchase_price_target" />
                <field name="local_price_target" />
                <field name="selected_askinfo_product_line" />
                <field name="attachment_ids" optional="hide"/>
                <field name="ei_executive_ids" widget="many2many_avatar_user" />
                <field name="note" />
                <field name="state" />
            </tree>
        </field>
    </record>

    <record id="askinfo_product_form" model="ir.ui.view">
        <field name="name">Form sản phẩm hỏi hàng</field>
        <field name="model">askinfo.product</field>
        <field name="arch" type="xml">
            <form string="Tạo mới sản phẩm hỏi hàng">
                <header>
                    <button string="Trình TPKD"  class="cus-btn oe_highlight" attrs="{'invisible': [('state', 'not in', ['draft', 'reject_draft'])]}"/>
                    <button string="Duyệt SP"  class="cus-btn oe_highlight" attrs="{'invisible': [('state', '!=', 'sent_sale_manager')]}"/>
                    <button string="Từ chối SP" class="cus-btn" attrs="{'invisible': [('state', '!=', 'sent_sale_manager')]}"/>
                    <button string="Phân công"  class="cus-btn oe_highlight" attrs="{'invisible': [('state', '!=', 'sent_ei_manager')]}"/>
                    <button string="Nhập giá bán nội bộ"  class="cus-btn oe_highlight" attrs="{'invisible': [('state', '!=', 'had_price_to_partner')]}"/>
                    <button string="Xác nhận giá bán nội bộ"  class="cus-btn oe_highlight" attrs="{'invisible': [('state', '!=', 'had_local_price')]}"/>
                    <button string="Nhập giá bán (KH)"  class="cus-btn oe_highlight" attrs="{'invisible': [('state', '!=', 'confirmed_local_price')]}"/>
                    <button string="Xác nhận giá bán (KH)"  class="cus-btn oe_highlight" attrs="{'invisible': [('state', '!=', 'had_price')]}"/>
                    <button string="Xác nhận báo giá"  class="cus-btn oe_highlight" attrs="{'invisible': [('state', '!=', 'confirmed_price')]}"/>
                    <button string="Đã gửi báo giá"  class="cus-btn oe_highlight" attrs="{'invisible': [('state', '!=', 'manager_confirmed')]}"/>
                </header>
                <sheet>
                    <group>
                        <field name="customer_id" />
                        <field name="common_name" />
                        <field name="product_id" />
                        <field name="quantily" />
                        <field name="product_origin" />
                        <field name="manufacturer" />
                        <field name="description" />
                        <field name="price" />
                        <field name="purchase_price" />
                        <field name="local_price" />
                        <field name="price_target" />
                        <field name="purchase_price_target" />
                        <field name="local_price_target" />
                        <field name="selected_askinfo_product_line" />
                        <field name="attachment_ids" widget="many2many_binary"/>
                        <field name="note" />
                        <field name="state" />
                    </group>

                    <label class="mb-2" for="askinfo_product_line_ids" string="Thông tin từ nhà cung cấp"/>
                    <field name="askinfo_product_line_ids">
                        <tree>
                            <field name="partner_id" />
                            <field name="common_name" />
                            <field name="product_id" />
                            <field name="quantily" />
                            <field name="price_vnd" />
                            <field name="total" />
                            <field name="product_origin" />
                            <field name="manufacturer" />
                            <field name="description" />
                            <field name="attachment_ids"/>
                            <field name="note" />
                            <field name="state" />
                        </tree>
                    </field>
                </sheet>
                <div class="oe_chatter">
                    <field name="message_follower_ids"/>
                    <field name="activity_ids"/>
                    <field name="message_ids"/>
                </div>
            </form>
        </field>
    </record>

    <!--FILTER + GROUP BY-->
    <record id="view_askinfo_product_filter" model="ir.ui.view">
        <field name="name">Lọc và nhóm sản phẩm hỏi hàng</field>
        <field name="model">askinfo.product</field>
        <field name="arch" type="xml">
            <search>
                <field name="common_name"/>
                <field name="product_id"/>
                <field name="customer_id"/>
                <field name="description"/>
                <filter string="Tạo ngày hôm nay" name="today" domain="[('create_date', '&gt;', (context_today() - datetime.timedelta(days=1)).strftime('%%Y-%%m-%%d'))]"/>
                <filter string="Sửa ngày hôm nay" name="today" domain="[('write_date', '&gt;', (context_today() - datetime.timedelta(days=1)).strftime('%%Y-%%m-%%d'))]"/>
                <group expand="0" string="Group By">
                    <filter string="Khách hàng" name="customer_id" domain="[]" context="{'group_by': 'customer_id'}"/>
                    <filter string="Ngày tạo" name="create_date" domain="[]" context="{'group_by': 'create_date'}"/>
                    <filter string="Người tạo" name="create_uid" domain="[]" context="{'group_by': 'create_uid'}"/>
                </group>
           </search>
        </field>
    </record>
</odoo>
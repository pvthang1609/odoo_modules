<?xml version="1.0" encoding="UTF-8" ?>
<odoo>

    <record id="currency_action" model="ir.actions.act_window">
        <field name="name">Đơn vị tiền tệ</field>
        <field name="res_model">currency</field>
        <field name="view_mode">tree,form</field>
    </record>

    <record id="currency_form" model="ir.ui.view">
        <field name="name">Form tạo đơn vị tiền tệ</field>
        <field name="model">currency</field>
        <field name="type">form</field>
        <field name="arch" type="xml">
            <form>
                <sheet>
                    <group>
                        <group>
                            <field name="name"/>
                        </group>
                        <group>
                            <field name="current_exchange_rate"/>
                        </group>
                    </group>
                </sheet>
            </form>
        </field>
    </record>

     <record id="currency_tree" model="ir.ui.view">
        <field name="name">Danh sách đơn vị tiền tệ</field>
        <field name="model">currency</field>
        <field name="type">tree</field>
        <field name="arch" type="xml">
            <tree>
                <field name="name"/>
                <field name="current_exchange_rate"/>
                <field name="write_date"/>
            </tree>
        </field>

    </record>

</odoo>
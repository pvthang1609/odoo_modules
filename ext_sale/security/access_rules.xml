<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record model="ir.rule" id="sale_order_read_in_group">
        <field name="name">Đọc đơn hàng trong nhóm bán hàng</field>
        <field name="model_id" ref="model_sale_order"/>
        <field name="domain_force">['|','|','|',('user_id','=',user.id),('user_id','=',False),('team_id.member_ids','in', [user.id]),('team_id.user_id','=',user.id)]</field>
        <field name="groups" eval="[(4, ref('ext_sale.group_ext_sale_sale_manager'))]"/>
        <field name="perm_read" eval="True"/>
        <field name="perm_write" eval="False"/>
        <field name="perm_create" eval="False"/>
        <field name="perm_unlink" eval="False"/>
    </record>

    <record model="ir.rule" id="sale_order_read_when_assign">
        <field name="name">Đọc đơn hàng nếu được phân công</field>
        <field name="model_id" ref="model_sale_order"/>
        <field name="domain_force">[('order_line.ei_executive_ids.id','in', [user.id])]</field>
        <field name="groups" eval="[(4, ref('ext_sale.group_ext_sale_ei_executive'))]"/>
        <field name="perm_read" eval="True"/>
        <field name="perm_write" eval="False"/>
        <field name="perm_create" eval="False"/>
        <field name="perm_unlink" eval="False"/>
    </record>

    <record model="ir.rule" id="sale_order_line_read_when_assign">
        <field name="name">Đọc chi tiết đơn hàng nếu được phân công</field>
        <field name="model_id" ref="model_sale_order"/>
        <field name="domain_force">[('ei_executive_ids.id','in', [user.id])]</field>
        <field name="groups" eval="[(4, ref('ext_sale.group_ext_sale_ei_executive'))]"/>
        <field name="perm_read" eval="True"/>
        <field name="perm_write" eval="False"/>
        <field name="perm_create" eval="False"/>
        <field name="perm_unlink" eval="False"/>
    </record>
</odoo>
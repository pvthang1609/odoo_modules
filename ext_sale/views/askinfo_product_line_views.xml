<?xml version="1.0" encoding="UTF-8" ?>
<odoo>
    <record id="askinfo_product_line_action" model="ir.actions.act_window">
        <field name="name">Thông tin hỏi hàng từ NCC</field>
        <field name="type">ir.actions.act_window</field>
        <field name="res_model">askinfo.product.line</field>
        <field name="view_mode">tree,form</field>
    </record>

    <record id="selected_askinfo_product_line_action" model="ir.actions.act_window">
        <field name="name">Danh sách chờ mua hàng từ nhà cung cấp</field>
        <field name="type">ir.actions.act_window</field>
        <field name="res_model">askinfo.product.line</field>
        <field name="view_mode">tree</field>
        <field name="context">{"search_default_group_partner_id":1, "search_default_state_is_selected": 1}</field>
    </record>

    <record id="askinfo_product_line_view" model="ir.ui.view">
        <field name="name">Danh sách thông tin hỏi hàng từ NCC</field>
        <field name="model">askinfo.product.line</field>
        <field name="type">tree</field>
        <field name="arch" type="xml">
            <tree string="Danh sách thông tin hỏi hàng từ NCC" multi_edit="1">
                <field name="delivery_time" />
                <field name="customer_id" />
                <field name="partner_id" />
                <field name="common_name" />
                <field name="product_id" />
                <field name="quantily" />
                <field name="product_origin" />
                <field name="manufacturer" />
                <field name="description" />
                <field name="price" />
                <field name="unit_currency" />
                <field name="exchange_rate" />
                <field name="price_vnd" />
                <field name="total" />
                <field name="state" />
                <field name="attachment_ids" />
                <field name="note" />
            </tree>
        </field>
    </record>

    <record id="askinfo_product_line_form" model="ir.ui.view">
        <field name="name">Form thông tin hỏi hàng từ NCC</field>
        <field name="model">askinfo.product.line</field>
        <field name="arch" type="xml">
            <form>
                <sheet>
                    <group>
                        <field name="delivery_time" />
                        <field name="partner_id" />
                        <field name="common_name" />
                        <field name="product_id" />
                        <field name="quantily" />
                        <field name="product_origin" />
                        <field name="manufacturer" />
                        <field name="description" />
                        <field name="price" />
                        <field name="unit_currency" />
                        <field name="exchange_rate" />
                        <field name="price_vnd" />
                        <field name="total" />
                        <field name="state" />
                        <field name="attachment_ids" widget="many2many_binary"/>
                        <field name="note" />
                    </group>
                </sheet>
                <div class="oe_chatter">
                    <field name="message_follower_ids"/>
                    <field name="activity_ids"/>
                    <field name="message_ids"/>
                </div>
            </form>
        </field>
    </record>

    <!--FILTER + GROUP BY-->
    <record id="view_askinfo_product_line_filter" model="ir.ui.view">
        <field name="name">Lọc và nhóm thông tin hỏi hàng từ NCC</field>
        <field name="model">askinfo.product.line</field>
        <field name="arch" type="xml">
            <search>
                <field name="common_name"/>
                <field name="product_id"/>
                <field name="partner_id"/>
                <field name="description"/>
                <filter string="Trạng thái - chưa mua hàng" name="state_not_buy" domain="[('state','!=','b')]"/>
                <filter string="Trạng thái - đã chọn" name="state_is_selected" domain="[('state','=','s')]"/>
                <filter string="Tạo ngày hôm nay" name="today" domain="[('create_date', '&gt;', (context_today() - datetime.timedelta(days=1)).strftime('%%Y-%%m-%%d'))]"/>
                <filter string="Sửa ngày hôm nay" name="today" domain="[('write_date', '&gt;', (context_today() - datetime.timedelta(days=1)).strftime('%%Y-%%m-%%d'))]"/>
                <group expand="0" string="Group By">
                    <filter string="Nhà cung cấp" name="group_partner_id" domain="[]" context="{'group_by': 'partner_id'}"/>
                </group>
           </search>
        </field>
    </record>
</odoo>
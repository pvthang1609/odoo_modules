<?xml version="1.0" encoding="UTF-8" ?>
<odoo>
    <record id="order_sale_order_line_action" model="ir.actions.act_window">
        <field name="name">Sản phẩm hỏi hàng</field>
        <field name="type">ir.actions.act_window</field>
        <field name="res_model">sale.order.line</field>
        <field name="view_mode">tree,form</field>
    </record>

    <record id="sale_order_line_view" model="ir.ui.view">
        <field name="name">Bảng mục sản phẩm hỏi hàng</field>
        <field name="model">sale.order.line</field>
        <field name="type">tree</field>
        <field name="arch" type="xml">
            <tree string="Danh sách mục sản phẩm hỏi hàng" multi_edit="1">
                <field name="common_name"/>
                <field name="product_id"/>
                <field name="product_uom_qty"/>
                <field name="product_origin" />
                <field name="manufacturer" />
                <field name="name" string="Mô tả yêu cầu"/>
                <field name="salesman_id" string="NVKD"/>
                <field name="order_id" string="YCHH"/>
            </tree>
        </field>
    </record>

    <record id="sale_order_line_form" model="ir.ui.view">
        <field name="name">Form mục sản phẩm hỏi hàng</field>
        <field name="model">sale.order.line</field>
        <field name="arch" type="xml">
            <form>
                <sheet>
                    <group>
                        <group>
                            <field name="common_name"/>
                            <field name="product_id" domain="[('sale_ok', '=', True), '|', ('company_id', '=', False), ('company_id', '=', parent.company_id)]"/>
                            <field name="product_uom_qty"/>
                            <field name="ei_executive_ids"  widget="many2many_tags"/>
                        </group>
                        <group>
                            <field name="selected_common_name"/>
                            <field name="selected_model"/>
                            <field name="min_quantity"/>
                            <field name="exp_date"/>
                            <field name="attachments"/>
                        </group>
                    </group>
                </sheet>
            </form>
        </field>
    </record>
</odoo>
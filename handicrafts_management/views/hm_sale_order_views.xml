<?xml version="1.0" encoding="UTF-8" ?>
<odoo>
    <record id="dm_sale_order_form" model="ir.ui.view">
        <field name="name">Sửa form đơn hàng</field>
        <field name="model">sale.order</field>
        <field name="inherit_id" ref="sale.view_order_form"/>
        <field name="arch" type="xml">
            <xpath expr="//button[@name='action_quotation_send']" position="before">
                <button icon="fa-check" string="Có bản vẽ" class="cus-btn btn-primary" type="object"
                            name="action_change_state_had_technical_drawings" attrs="{'invisible': [('state', '!=', 'draft')]}"/>
                <button icon="fa-check" string="Có mẫu" class="cus-btn btn-primary" type="object"
                            name="action_change_state_sample_production" attrs="{'invisible': [('state', '!=', 'had_technical_drawings')]}"/>
                <button icon="fa-check" string="Gửi mẫu" class="cus-btn btn-primary" type="object"
                            name="action_change_state_send_samples" attrs="{'invisible': [('state', '!=', 'sample_production')]}"/>
            </xpath>
            <xpath expr="//button[@id='action_confirm']" position="attributes">
                <attribute name="states">send_samples</attribute>
            </xpath>
            <xpath expr="//header/field[@name='state']" position="attributes">
                <attribute name="statusbar_visible">draft,had_technical_drawings,sample_production,send_samplessent,sale</attribute>
            </xpath>
        </field>
    </record>
</odoo>